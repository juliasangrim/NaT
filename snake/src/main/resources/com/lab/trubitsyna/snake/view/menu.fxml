<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="782.0" prefWidth="1038.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.lab.trubitsyna.snake.controller.MenuController">
   <Pane prefHeight="814.0" prefWidth="1055.0" style="-fx-background-color: E6E6FA;">
      <effect>
         <Bloom threshold="1.0" />
      </effect>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Text" />
      <Label alignment="CENTER" layoutX="160.0" layoutY="39.0" prefHeight="90.0" prefWidth="736.0" style="-fx-background-color: LightYellow;" text="SNAKE GAME">
         <font>
            <Font name="Bookman Old Style Bold" size="41.0" />
         </font>
      </Label>
      <Button fx:id="playButton" layoutX="106.0" layoutY="328.0" mnemonicParsing="false" onAction="#mouseListenerPlay" prefHeight="45.0" prefWidth="283.0" style="-fx-background-color: LightYellow;" text="PLAY">
         <font>
            <Font name="Bookman Old Style Bold" size="19.0" />
         </font>
      </Button>
      <ListView fx:id="availableGames" layoutX="439.0" layoutY="189.0" onMouseClicked="#listListener" prefHeight="482.0" prefWidth="538.0" />
      <Button fx:id="settingsButton" layoutX="106.0" layoutY="407.0" mnemonicParsing="false" prefHeight="45.0" prefWidth="283.0" onAction="#mouseListenerSettings" style="-fx-background-color: LightYellow;" text="SETTINGS">
         <font>
            <Font name="Bookman Old Style Bold" size="19.0" />
         </font>
      </Button>
      <Button fx:id="exitButton" layoutX="106.0" layoutY="495.0" mnemonicParsing="false" prefHeight="45.0" prefWidth="283.0"
             onAction="#mouseListenerExit" style="-fx-background-color: LightYellow;" text="EXIT">
         <font>
            <Font name="Bookman Old Style Bold" size="19.0" />
         </font>
      </Button>
   </Pane>
</AnchorPane>
